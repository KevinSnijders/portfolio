{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio to showcase my previous work",
  "main": "index.js",
  "scripts": {
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "dev:server": "npm run webpack-dev-server -- --env.mode development",
    "build:dev": "gulp && npm run webpack -- --env.mode development && npm run dev:server",
    "build:prod": "gulp && npm run webpack -- --env.mode production",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "eslint **/*.js src/templates/**/*.html && echo 'Lint complete.",
    "lint:fix": "prettier-eslint **/*.js src/templates/**/*.html --write",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "./src/scripts/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KevinSnijders/portfolio.git"
  },
  "author": "Kevin Snijders",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KevinSnijders/portfolio/issues"
  },
  "homepage": "https://github.com/KevinSnijders/kevinsnijders.github.io#readme",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "check-prop-types": "^1.1.2",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^4.2.0",
    "gh-pages": "^2.1.1",
    "gulp": "^4.0.2",
    "gulp-newer": "^1.4.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "lint-staged": "^9.2.5",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "purgecss-webpack-plugin": "^1.6.0",
    "react-hot-loader": "^4.12.14",
    "react-test-renderer": "^16.10.1",
    "sass": "^1.22.12",
    "sass-loader": "^8.0.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "indent-string": "^4.0.0",
    "particles.js": "^2.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-particles-js": "^2.7.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "uglifyjs-webpack-plugin": "^2.2.0"
  }
}
